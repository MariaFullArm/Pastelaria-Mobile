<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_historico_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#ffffff"
    android:paddingBottom="8dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:layout_height="2dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/list_item_pedido_quantidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textSize="22sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1" />

        <TextView
            android:id="@+id/list_item_separador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="x"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@id/list_item_pedido_quantidade"
            app:layout_constraintTop_toTopOf="@id/list_item_pedido_quantidade"
            app:layout_constraintBottom_toBottomOf="@id/list_item_pedido_quantidade"
            />

        <TextView
            android:id="@+id/list_item_pedido_nome_produto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="22sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toEndOf="@id/list_item_separador"
            app:layout_constraintTop_toTopOf="@+id/list_item_pedido_quantidade"
            tools:text="Pastel de Presunto e queijp" />

        <TextView
            android:id="@+id/list_item_pedido_descricao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            app:layout_constraintStart_toStartOf="@id/list_item_pedido_quantidade"
            app:layout_constraintTop_toBottomOf="@id/list_item_pedido_nome_produto"
            app:layout_constraintEnd_toEndOf="@id/list_item_pedido_nome_produto"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="18sp"
            tools:text="50g de Queijo \n50g de Presunto \nUm pouco de azeitona \nMaionese"/>

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>